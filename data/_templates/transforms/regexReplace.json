{
  "extract all 'a' values by regex and merge by separator": {
    "example": "'Banana' > return a|a|a",
    "rule": "regexReplace",
    "regexRule": "\\d+\/gi",
    "type": "match",
    "matchJoinerSeparator" : "|",
    "onerror": {
      "customVal": "",
      "type": "customVal"
    }
  },

  "extract all words that contain 'a' values by regex and return only index=2": {
    "example": "'Banana fruit apple cream' > return 'Banana and cream'",
    "rule": "regexReplace",
    "regexRule": "\\S*a+\\S*/gi",
    "type": "matchByIndex",
    "matchJoinerSeparator" : " and ",
    "matchIndex" : [0,2],
    "onerror": {
      "customVal": "",
      "type": "customVal"
    }
  },

  "replace all 'a' values by regex with replaceVal": {
    "example": "'Banana' > return Binini",
    "rule": "regexReplace",
    "regexRule": "\\d+\/gi",
    "type": "replace",
    "replaceVal" : "i",
    "onerror": {
      "customVal": "",
      "type": "customVal"
    }
  },
  "replace all 'a' values by regex with a fieldValue": {
    "example": "'Banana' > return Boknoknok (assuming FieldName = ok)",
    "rule": "replaceByField",
    "regexRule": "\\d+\/gi",
    "type": "replace",
    "replaceVal" : "i",
    "fieldName" : "FieldName",
    "onerror": {
      "customVal": "",
      "type": "customVal"
    }
  }

 
}
